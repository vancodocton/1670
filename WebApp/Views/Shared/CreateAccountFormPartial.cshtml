@model WebApp.ViewModels.AccountRegisterViewModel

@using (Html.BeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	<hr />
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="form-group mb-3">
		@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group mb-3">
		@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group mb-3">
		@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group mb-3">
		@Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.DropDownListFor(m => m.Role, new SelectList(Model.Roles), new { @class = "form-select" })
		</div>
	</div>
	<div class="d-none" id="trainer-profile">
		<div class="form-group mb-3">
			@Html.LabelFor(model => model.Trainer.Specialty, htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Trainer.Specialty, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Trainer.Specialty, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>

	<div class="d-none" id="trainee-profile">
		<div class="form-group mb-3">
			@Html.LabelFor(model => model.Trainee.BirthDate, htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Trainee.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Trainee.BirthDate, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group mb-3">
			@Html.LabelFor(model => model.Trainee.Education, htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Trainee.Education, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Trainee.Education, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>
	<div class="form-group mb-3">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-primary" value="Create Account" />
		</div>
	</div>
}