@model WebApp.Models.ResetPasswordViewModel
@{
	ViewBag.Title = "Reset password";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ResetPassword", null, null, FormMethod.Post, new { @class = "form", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary("", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Code)
	<hr />
	<div class="form-group mb-3">
		@Html.LabelFor(m => m.Email, new { @class = "col-md-2 form-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group mb-3">
		@Html.LabelFor(m => m.Password, new { @class = "col-md-2 form-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group mb-3">
		@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 form-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group mb-3">
		<div class="col-md-offset-2 col-md-10 ">
			@Html.ActionLink("Ignore", "Index", null, new { @class = "btn btn-secondary" })
			<input type="submit" class="btn btn-primary" value="Confirm" />
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}