@model IEnumerable<WebApp.Models.Course>
@using WebApp.Utils

@{
    ViewBag.Title = "ViewCourseAssigned";
}


<table class="table">
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.CourseCategory)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th scope="col">
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                @item.Name
            </th>
            <td>
                @item.CourseCategory.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @Html.ActionLink("View Trainee", "ViewTrainee", new { courseId = item.Id })
            </td>
        </tr>
    }

</table>
