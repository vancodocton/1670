@model ICollection<WebApp.ViewModels.GroupedUsersViewModel<WebApp.Models.ApplicationUser>>
@{
	ViewBag.Title = "Dashboard";
	int i = 0;
}
<h2>Dashboard</h2>

<div class="row">
	<div class="col-xl-3 list-group list-group-flush">
		@Html.ActionLink("Create new account", "Create", null, new { @class = "list-group-item list-group-item-action" })

		@Html.ActionLink("Reset Password", "ResetPassword", null, new { @class = "list-group-item list-group-item-action" })
	</div>

	<div class="col-xl-9">
		@foreach (var groupedUsers in Model)
		{
			{ i = 0; }
			<h3>@groupedUsers.Type Accounts</h3>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">UserName</th>
						<th scope="col">Full Name</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var user in groupedUsers.Users)
					{
						{ i++; }
						<tr>
							<th scope="row">@i</th>
							<td>@user.UserName</td>
							<td>@user.FullName</td>
							<td class="dropdown">
								<button class="btn btn-primary dropdown-toggle" type="button" id="actions-dropdown" data-bs-toggle="dropdown"
										aria-haspopup="true" aria-expanded="false">
									Actions
								</button>
								<div class="dropdown-menu dropdown-menu-end" aria-labelledby="actions-dropdown">
									@Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "dropdown-item" })
									@Html.ActionLink("Edit profiles", "Edit", new { id = user.Id }, new { @class = "dropdown-item" })
									@Html.ActionLink("Details", "Details", new { id = user.Id }, new { @class = "dropdown-item" })
									@Html.ActionLink("Reset Password", "ResetPassword", new { email = user.Email }, new { @class = "dropdown-item" })
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
	</div>
</div>
