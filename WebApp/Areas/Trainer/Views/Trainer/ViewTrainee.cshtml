    <tr>
        <th scope="col">Trainee Name</th>
        <th scope="col">Full Name</th>
        <th scope="col">Age</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
