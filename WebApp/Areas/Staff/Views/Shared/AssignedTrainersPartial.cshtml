@model ICollection<WebApp.Models.Trainer>
@using WebApp.Utils;

<h3>Enrolled Trainers</h3>
@if (Model.Count == 0)
{
	<p class="text-danger">There is no assigned trainer in the course.</p>
}
else
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">UserName</th>
				<th scope="col">Full Name</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var trainer in @Model)
			{
				<tr>
					<td>@trainer.User.UserName</td>
					<td>@trainer.User.FullName</td>
					<td>
						@Html.ActionLink("Unassign", "Remove", "Assign", new { courseId = ViewBag.CourseId, userRole = Role.Trainer, userId = trainer.UserId }, new { @class = "btn btn-danger" })
					</td>
				</tr>
			}
		</tbody>
	</table>
}
